<!-- Form -->

<div class="form">

  <h1>
    <i>Busque serviços.</i>
    <br/>
    <i>Encontre facilidades.</i>
  </h1>

  <div class="title"></div>
  <div class="subtitle"></div>

  <div class="cadastro">
    <h4>
      <i>Cadastre-se para saber quando</i>
      <br/>
      <i>começaremos as nossas atividades e</i>
      <br/>
      <i>ainda receba novidades e promoções.</i>
    </h4>
    <%= form_for @cadastrado, :url => {:controller => 'cadastrado', :action => 'create'} do |c| %>

        <%= c.text_field :nome, :class => 'inputs', :placeholder => 'NOME', :required => 'required' %><br/>
        <%= c.text_field :email, :class => 'inputs', :placeholder => 'E-MAIL', :required => 'required' %><br/>

        <%= c.submit t(:cadastrar), :class => 'btn btn-primary inputs' %><br />
        <span class="msg-sucesso"><%= flash[:sucesso] %></span>
    <% end %>
  </div>

</div>

<!-- Fim - Form -->

